generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model FileSystem {
  id             String   @id @default(cuid())
  name           String
  slug           String
  type           String
  size           String
  items          Int?
  path           String[]

  color          String?

  // Người tạo file
  createdBy      User     @relation("CreatedFiles", fields: [createdById], references: [id])
  createdById    String   @db.Uuid

  // Người được nhìn thấy file này
  visibleToUsers User[]   @relation("VisibleToUsers")

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model User {
  id             String   @id @db.Uuid
  email          String   @unique
  username       String   @unique
  name           String
  avatar         String?

  jobTitle       String?
  department     String?
  phoneNumber    String?

  role           Role     @default(USER)

  // Notification, Projects (giữ nguyên)
  notifications  UserNotification[]
  assignedProjects Project[] @relation("UserProjects")

  // Files được tạo ra bởi user này
  fileCreated    FileSystem[] @relation("CreatedFiles")

  // Files được chia sẻ tới user này
  files          FileSystem[] @relation("VisibleToUsers")

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
  ACCOUNTING
}

model Project {
  id        Int        @id @default(autoincrement())
  jobNo     String     @unique
  jobName   String
  status    JOB_STATUS @default(ON_PROGRESS)
  price     Int
  sourceUrl String
  thumbnail String

  memberAssign User[] @relation("UserProjects")

  startedAt   DateTime @default(now())
  dueAt       DateTime
  completedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum JOB_STATUS {
  DELIVERED
  ON_PROGRESS
  REVISION
  CANCELLED
}

model UserNotification {
  id Int @id @default(autoincrement())

  user           User         @relation(fields: [userId], references: [id])
  userId         String       @db.Uuid
  notification   Notification @relation(fields: [notificationId], references: [id])
  notificationId Int

  status NOTIFICATION_STATUS @default(UNSEEN)
}

enum NOTIFICATION_STATUS {
  SEEN
  UNSEEN
}

model Notification {
  id      Int     @id @default(autoincrement())
  title   String?
  content String
  image   String?

  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  UserNotification UserNotification[]
}