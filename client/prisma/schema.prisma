generator client {
  provider = "prisma-client-js"
}

generator docs {
  provider = "node node_modules/prisma-docs-generator"
  output   = "./docs"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FileSystem {
  id    Int      @id @default(autoincrement())
  name  String
  type  String
  size  String
  items Int?
  path  String[]
  color String?

  createdById Int
  createdBy   User @relation("CreatedFiles", fields: [createdById], references: [id])

  visibleToUsers User[] @relation("VisibleToUsers")

  // Link files to jobs
  job   Job? @relation(fields: [jobId], references: [id])
  jobId Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdById])
  @@index([jobId])
}

model User {
  id       Int     @id @default(autoincrement())
  uuid     String? @unique @default(uuid()) @db.Uuid // Supabase authentication id
  email    String  @unique
  username String  @unique
  name     String
  avatar   String?

  jobTitle    String?
  department  String?
  phoneNumber String?

  role RoleEnum @default(USER)

  // Activity tracking
  isActive    Boolean   @default(true)
  lastLoginAt DateTime?

  notifications UserNotification[]
  assignedJobs  Job[]              @relation("UserJobs")

  filesCreated FileSystem[] @relation("CreatedFiles")
  files        FileSystem[] @relation("VisibleToUsers")

  // Job creation tracking
  createdJobs Job[] @relation("JobCreator")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sendNoties     Notification[]
  JobActivityLog JobActivityLog[]
}

enum RoleEnum {
  USER
  ADMIN
  ACCOUNTING
}

model Job {
  id Int @id @default(autoincrement())

  jobType   JobType @relation(fields: [jobTypeId], references: [id])
  jobTypeId Int

  jobNo       String  @unique
  jobName     String
  description String?
  sourceUrl   String?

  clientName String
  income     Int
  staffCost  Int

  // Job assignment
  memberAssign User[] @relation("UserJobs")

  // Job creator
  createdBy   User @relation("JobCreator", fields: [createdById], references: [id])
  createdById Int

  // Payment Channel
  paymentChannel   PaymentChannel @relation(fields: [paymentChannelId], references: [id])
  paymentChannelId Int

  // Status management
  status   JobStatus @relation(fields: [statusId], references: [id])
  statusId Int

  // Status change history
  activityLog JobActivityLog[]

  // Job dates
  startedAt   DateTime  @default(now())
  dueAt       DateTime
  completedAt DateTime?

  // Job management features
  priority JobPriority @default(MEDIUM)

  // Related data
  files FileSystem[]

  deletedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([statusId])
  @@index([createdById])
  @@index([priority])
}

model PaymentChannel {
  id      Int     @id @default(autoincrement())
  name    String
  color   String?
  logoUrl String?

  jobs Job[]
}

model JobType {
  id   Int    @id @default(autoincrement())
  code String
  name String
  jobs Job[]
}

enum JobPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

model JobStatus {
  id           Int     @id @default(autoincrement())
  title        String
  thumbnail    String
  color        String
  order        Int     @unique
  icon         String?
  nextStatusId Int?
  prevStatusId Int?

  jobs Job[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([order])
}

model JobActivityLog {
  id Int @id @default(autoincrement())

  job   Job @relation(fields: [jobId], references: [id], onDelete: Cascade)
  jobId Int

  previousValue String?
  currentValue  String?

  modifiedAt   DateTime @default(now())
  modifiedBy   User     @relation(fields: [modifiedById], references: [id])
  modifiedById Int

  fieldName    String
  activityType ACTIVITY_TYPE
  notes        String?

  @@index([jobId, modifiedAt])
  @@index([modifiedById])
}

enum ACTIVITY_TYPE {
  CreateJob
  ChangeStatus
  AssignMember
  UnassignMember
  ChangePaymentChannel
  UpdateInformation
  DeleteJob
}

model UserNotification {
  id Int @id @default(autoincrement())

  user   User @relation(fields: [userId], references: [id])
  userId Int

  notification   Notification @relation(fields: [notificationId], references: [id])
  notificationId Int

  status NOTIFICATION_STATUS @default(UNSEEN)

  createdAt DateTime @default(now())

  @@index([userId, status])
}

enum NOTIFICATION_STATUS {
  SEEN
  UNSEEN
}

model Notification {
  id      Int     @id @default(autoincrement())
  title   String?
  content String
  image   String?

  senderId Int?
  sender   User? @relation(fields: [senderId], references: [id])

  // Notification types
  type NotificationType @default(INFO)

  // Optional: link to related entities
  relatedJobId Int?

  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  userNotification UserNotification[]
  userId           Int

  @@index([type])
  @@index([createdAt])
}

enum NotificationType {
  INFO
  WARNING
  ERROR
  SUCCESS
  JOB_UPDATE
  DEADLINE_REMINDER
  STATUS_CHANGE
}
